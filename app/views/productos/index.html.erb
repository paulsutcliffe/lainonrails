<h1>Listing productos</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @productos.each do |producto| %>
  <tr>
    <td><%= producto.nombre %></td>
    <td><%= producto.descripcion %></td>
    <td><%= link_to image_tag(producto.picture(:regular)), producto %></td>

    <% if current_admin %>
    <td><%= link_to 'Editar', edit_producto_path(producto) %></td>
    <td><%= link_to 'Eliminar', producto, :confirm => '¿Estás seguro?', :method => :delete %></td>
    <% end %>

  </tr>
<% end %>
</table>

<br />

<% if @productos.empty? %>
  <% if current_admin %>
    <%= link_to 'Nuevo producto', new_producto_path %>
  <% end %>
<% end %>