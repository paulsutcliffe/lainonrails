<h3><%= @admin.email %></h3>
 

 
<table class="one-column-emphasis">
	<tbody>
		<tr>
			<td class="oce-first">Email:</td>
			<td><%= @admin.email %></td>
		</tr>
		<tr>
			<td class="oce-first">Role:</td>
			<td><%= @admin.roles.first.name %></td>
		</tr>
	<% if can?(:see_timestamps,Admin) %>
		<tr>
			<td class="oce-first">Creado en:</td>
			<td><%= @admin.created_at %></td>
		</tr>
		<tr>
			<td class="oce-first">Último ingreso al sistema:</td>
			<td><%= @admin.last_sign_in_at %></td>
		</tr>
		<tr>
			<td class="oce-first">Ingresos al sistema:</td>
			<td><%= @admin.sign_in_count %></td>
		</tr>
	<% end %>
	</tbody>
</table>

<%= link_to "Atrás", admins_path, :class => 'btn' %>
<%= link_to_if(can?(:update,@admin), "Editar", edit_admin_path(@admin), :class => 'btn' ) %>
<%= link_to_if(can?(:delete, @admin), "Eliminar", admin_path(@admin), :confirm => "Are you sure?", :method => :delete, :class => 'btn') {} %>