<% unless current_usuario %>
<div id="preface-top" class="region">
  <%= render 'home/slides' %>
</div><!-- END: preface-top -->
<% end %>

<div id="content" class="region">
  <div class="block">
    <h2 class="title">Lanzamientos LAIN</h2>
    <%= render 'home/banner' %>
