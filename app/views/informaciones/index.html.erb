<h1>Listando informaciones</h1>

<table>
  <tr>
    <th>Telefono fijo</th>
    <th>Llamada gratuita</th>
    <th>Email</th>
    <th>Facebook</th>
    <th></th>
    <th></th>
  </tr>

<% @informaciones.each do |informacion| %>
  <tr>
    <td><%= informacion.telefono_fijo %></td>
    <td><%= informacion.llamada_gratuita %></td>
    <td><%= informacion.email %></td>
    <td><%= truncate(informacion.facebook, :length => 12) %></td>
    <td><%= link_to 'Editar', edit_informacion_path(informacion), :class => 'btn' %></td>
    <td><%= link_to 'Eliminar', informacion, :confirm => '¿Estás seguro?', :method => :delete, :class => 'btn' %></td>
  </tr>
<% end %>
</table>

<br />
<% if @informaciones.empty? %>
  <%= link_to 'Ingresar Información', new_informacion_path, :class => 'btn' %>
<% end %>
