<%= form_for(@contacto) do |f| %>
  <% if @contacto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contacto.errors.count, "error") %> prohibited this contacto from being saved:</h2>

      <ul>
      <% @contacto.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %>
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :apellido %>
    <%= f.text_field :apellido %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :telefono %>
    <%= f.text_field :telefono %>
  </div>
  <div class="field">
    <%= f.label :direccion, "Dirección" %>
    <%= f.text_field :direccion %>
  </div>
  <div class="field">
    <%= f.label :distrito %>
    <%= f.text_field :distrito %>
  </div>
  <div class="field">
    <%= f.label :ciudad %>
    <%= f.text_field :ciudad %>
  </div>
  <div class="field">
    <%= f.label :provincia %>
    <%= f.text_field :provincia %>
  </div>
  <div class="field">
    <%= f.label :mensaje %>
    <%= f.text_area :mensaje %>
    <div>
      <input type="checkbox" name="politicas" /><label>Acepto que he leído el documento de <%= link_to 'Políticas de privacidad', politicas_path, :target => '_blank' %> y estoy de acuerdo con sus términos.</label>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Envíar" %>
  </div>
<% end %>
