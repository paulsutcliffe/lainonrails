<!-- ie support
================================================== -->
  <%= render 'layouts/ie-support' %>

    

    <%= yield(:head) %>
  </head>
  <body id="<%= body_id %>" class="<%= body_class + " " + I18n.locale.to_s %>">
    <div id="header-top">
  <div class="container_12">
    <div id="banner" class="grid_6 alpha">
     
      <% if @cabecera_banner %>
        <%= image_tag @cabecera_banner.cabecera_banner(:regular) %>
      <% end %>
    
    </div>

    <% case I18n.locale %> 
    <% when :pe %>
    <% if !current_usuario %>
    <div id="login" class="grid_6 omega">
    <form>
      <div class="field">
        <label></label>
        <input type="text" value="Usuario" />
        <%= link_to 'Crear Cuenta', '/usuarios/registro/inscribirse' %>
      </div>
      <div class="field">
        <label></label>
        <input type="text" value="Contraseña" />
        <a href="">Recuperar Contraseña</a>
      </div>
      <div class="actions">
        <input type="submit" value="Ir" />
      </div>
    </form>
    </div>
    <% end %>
    <% if current_usuario %>
      <%= link_to 'Desc', {:controller=>"devise/sessions", :action=>"destroy"} %>
    <% end %>
  
    <% when :cr %>

    <%= image_tag '/images/images/logo-lain-costarica.png', :id => 'foreign-logo' %>

    <% when :gt %>

    <!-- Logo Lain -->

    <% when :sv %>

    <!-- Logo Lain -->

    <% when :bo %>

    <!-- Logo Lain -->

    <% when :uy %>

    <!-- Logo Lain -->

    <% end %>

  </div>
</div>
<header>
  <div id="header-inner" class="container_12">
    <%= render 'layouts/menu' %>
    <h1>
      LAIN, L&iacute;der mundial en Adelgazamiento
    </h1>
  </div>
</header>
	
<div id="main-wrapper" class="container_12">
  <div id="main">
    <div id="sidebar-first" class="grid_3 region">
      <div id="sidebar-first-inner">
	  <%= link_to image_tag('/images/logo.png'), home_path, :id => 'logo', :class => 'block'  %>
      <%= render :partial => '/layouts/sidebar' %>
      </div>
    </div><!-- END: sidebar-first -->
    
    <div id="content-wrapper" class="grid_9 omega region">
     <div id="content-wrapper-inner" class="inner">
      <div id="content-top">Más de 100,000 hombres y mujeres de 5 países ya cambiaron su vida. </div>
      <%= yield %>
      
      
      
      
      
            
     </div><!-- END: content-wrapper-inner -->
      
    </div><!-- END: content-wrapper -->
	<footer>
         <p>Copyright © 2012. Lain Intercorp S.A. Todos los derechos reservados.</p>
      </footer>
  </div><!-- END: main -->
</div><!-- END: main-wrapper -->

	
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>

      <%= content_tag :h1, yield(:title) if show_title? %>

    
  </body>
</html>
