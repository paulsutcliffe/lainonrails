<!-- jQuery slider
================================================== -->
  <%= stylesheet_link_tag '/javascripts/libs/royal-slider/royalslider.css', '/javascripts/libs/royal-slider/royalslider-skins/default/default.css', '/javascripts/libs/royal-slider/royalslider-skins/iskin/iskin.css' %>
