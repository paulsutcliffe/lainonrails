<div id="content" class="region grid_8 omega region">
  <h2 class="title"><%= page_title! "Computest" %></h2>
  <h3>Resultado para <%= @computest.nombre + ' ' + @computest.apellido %></h3>

  <div class="field">
    <p>Índice de Masa Corporal (IMC)<span><%= @imc %></span></p>	
  </div>

  <div class="field">
    <p>Tu estado es <span><%= @estado %></span></p>	
  </div>

  <div class="field">
    <p><%= @peso_ideal %></p>
  </div>
  
  <% if can? :manage, Computest %>
  <div class="field">
    <p>E-mail: <%= @computest.email %></p>	
  </div>

  <div class="field">
    <p>Teléfono: <%= @computest.telefono %></p>	
  </div>

  <div class="field">
    <p>Sexo: <%= @computest.sexo %></p>	
  </div>
  <% end %>

<% if can? :manage, Computest %>
  <%= link_to 'Atrás', computests_path, :class => 'btn back' %>
<% else %>
  <%= link_to 'Atrás', new_computest_path, :class => 'btn back' %>
<% end %>
</div>


