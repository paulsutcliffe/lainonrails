<%= form_for(@computest) do |f| %>
  <% if @computest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@computest.errors.count, "error") %> prohibited this contacto from being saved:</h2>

      <ul>
      <% @computest.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <legend>Información</legend>
  <div class="field">
    <%= f.label :nombre %>
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :apellido %>
    <%= f.text_field :apellido %>
  </div>
  <div class="field">
    <%= f.label :email, "E-mail" %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :telefono, "Teléfono" %>
    <%= f.text_field :telefono %>
  </div>
  <div class="field">
    <%= f.label :sexo %>
    <%= f.select(:sexo, options_for_select( ['Masculino', 'Femenino'], 'Masculino' ) ) %>
  </div>
  <div class="field">
    <%= f.label :peso, "Peso (Kg)" %>
    <%= f.text_field :peso %>
  </div>
  <div class="field">
    <%= f.label :altura, "Altura (Mt)" %>
    <%= f.text_field :altura %>
  </div>
  <div class="actions">
    <%= f.submit "Calcular" %>
  </div>
<% end %>
