<h1>Listing recetas</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Ingredientes</th>
    <th>Preparacion</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @recetas.each do |receta| %>
  <tr>
    <td><%= receta.nombre %></td>
    <td><%= receta.ingredientes %></td>
    <td><%= receta.preparacion %></td>
    <td><%= link_to image_tag(receta.snapshot(:thumb)), receta %></td>
    <td><%= link_to 'Editar', edit_receta_path(receta) %></td>
    <td><%= link_to 'Eliminar', receta, :confirm => '¿Estás seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% if @recetas.empty? %>
  <%= link_to 'Nueva receta', new_receta_path %>
<% end %>