<% @recetas.each do |receta| %>
  <tr>
    <td><%= receta.nombre %></td>
    <td><%= receta.ingredientes %></td>
    <td><%= receta.preparacion %></td>
    <td><%= link_to 'Show', receta %></td>
    <td><%= link_to 'Edit', edit_receta_path(receta) %></td>
    <td><%= link_to 'Destroy', receta, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

