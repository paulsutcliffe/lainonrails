<h1>Listing ads</h1>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ads.each do |ad| %>
  <tr>
    <td><%= link_to image_tag(ad.ad(:thumb)) %></td>
    <td><%= link_to 'Editar', edit_ad_path(ad) %></td>
    <td><%= link_to 'Eliminar', ad, :confirm => '¿Estás seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% if @ads.empty? %>
  <%= link_to 'Nuevo anuncio', new_ad_path %>
<% end %>