<h1>Listando sucursales</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Direccion</th>
    <th>Telefonos</th>
    <th>País</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sucursales.each do |sucursal| %>
  <tr>
    <td><%= sucursal.nombre %></td>
    <td><%= sucursal.direccion %></td>
    <td><%= sucursal.telefonos %></td>
    <td><%= sucursal.pais %></td>
    <td><%= link_to image_tag(sucursal.local(:thumb)), sucursal %></td>
    
    <% if current_admin %>
    <td><%= link_to 'Editar', edit_sucursal_path(sucursal) %></td>
    <td><%= link_to 'Eliminar', sucursal, :confirm => '¿Estás seguro?', :method => :delete %></td>
    <% end %>

  </tr>
<% end %>
</table>

<br />

<% if current_admin %>
  <%= link_to 'Nueva sucursal', new_sucursal_path %>
<% end %>